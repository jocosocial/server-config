# WARNING: This will not delete any logs!
{{ twitarr_logs_dir }}/swiftarr.log {
  compress
  size 100M
  missingok
  sharedscripts
  postrotate
    /usr/bin/systemctl kill -s HUP rsyslog.service >/dev/null 2>&1 || true
  endscript
}

